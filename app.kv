<MenuScreen>:
    name: 'Menu'
    FloatLayout:
        MDLabel:
            text: "Word2Vec Games"
            pos_hint: {'center_x':.5, 'center_y':.78}
            size_hint: 1.0, 0.2
            font_style: 'H4'
            font_size: '60sp'
            color: (1,1,1,1)
            halign: 'center'

        MDLabel:
            text: "Word Games with Word2Vec!"
            pos_hint: {'center_x':.5, 'center_y':.4}
            size_hint: 1.0, 0.2
            font_style: 'H5'
            color: (1,1,1,1)
            halign: 'center'

        MDIcon:
            icon: 'abacus'
            pos_hint: {'center_x':.25, 'center_y':.55}
            halign: 'center'

        MDIcon:
            icon: 'bookshelf'
            pos_hint: {'center_x':.5, 'center_y':.55}
            halign: 'center'
        MDIcon:
            icon: 'brain'
            pos_hint: {'center_x':.75, 'center_y':.55}
            halign: 'center'

        MDRaisedButton:
            text: 'Begin!'
            size_hint: 0.6, 0.1
            pos_hint: {'center_x': .5, 'center_y': .2}
            font_style: 'H5'
            on_release:
                app.set_odd_options()
                root.manager.transition.direction='left'
                root.manager.current = 'Odd'
<ScoresScreen>:
    name: 'Scores'
    FloatLayout:
        MDLabel:
            id: odd_score
            text: 'Odd One Out Score: ' + str(app.odd_correct) + '/' + str(app.odd_total)
            pos_hint: {'center_x': .5, 'top': 0.85}
            size_hint: 1.0, 0.2
            font_style: 'H5'
            color: (1,1,1,1)
            halign: 'center'
        MDLabel:
            id: maths_score
            text: 'Word Maths Score: ' + str(app.maths_correct) + '/' + str(app.maths_total)
            pos_hint: {'center_x': .5, 'top': 0.65}
            size_hint: 1.0, 0.2
            font_style: 'H5'
            color: (1,1,1,1)
            halign: 'center'

        MDLabel:
            id: closest_score
            text: 'Closest Pair Score: ' + str(app.closest_correct) + '/' + str(app.closest_total)
            pos_hint: {'center_x': .5, 'top': 0.45}
            size_hint: 1.0, 0.2
            font_style: 'H5'
            color: (1,1,1,1)
            halign: 'center'

        MDLabel:
            id: total_score
            text: 'Total: 0% Correct'
            pos_hint: {'center_x': .5, 'top': 0.25}
            size_hint: 1.0, 0.2
            font_style: 'H4'
            color: (1,1,1,1)
            halign: 'center'

        MDToolbar:
            id: toolbar
            title: 'Menu'
            pos_hint: {'top': 1}
            elevation: 15
            left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]

        MDNavigationDrawer:
            id: nav_drawer
            FloatLayout:
                size_hint: 1.0, 1.0
                MDLabel:
                    text: "Game Selection"
                    size_hint: 1.0, 0.1
                    pos_hint: {"center_x":0.8, "y":0.9}
                    font_size: Window.width/20
                MDRaisedButton:
                    text: "Odd One Out"
                    size_hint: 1.0, 0.18
                    pos_hint: {"x":0.0, "y":0.72}
                    font_size: Window.width/20
                    on_release:
                        root.manager.transition.direction='left'
                        root.manager.current = 'Odd'
                MDRaisedButton:
                    text: "Word Maths"
                    size_hint: 1.0, 0.18
                    pos_hint: {"x":0.0, "y":0.54}
                    font_size: Window.width/20
                    on_release:
                        app.set_maths_question()
                        root.manager.transition.direction='left'
                        root.manager.current = 'Maths'
                MDRaisedButton:
                    text: "Closest Pair"
                    size_hint: 1.0, 0.18
                    pos_hint: {"x":0.0, "y":0.36}
                    font_size: Window.width/20
                    on_release:
                        app.set_closest_pair()
                        root.manager.transition.direction='left'
                        root.manager.current = 'Closest'
                MDRaisedButton:
                    text: "Match Pairs"
                    size_hint: 1.0, 0.18
                    pos_hint: {"x":0.0, "y":0.18}
                    font_size: Window.width/20
                    on_release:
                        app.set_pairs_match()
                        root.manager.transition.direction='left'
                        root.manager.current = 'Match'
                MDRaisedButton:
                    text: "Scores"
                    size_hint: 1.0, 0.18
                    pos_hint: {"x":0.0, "y":0.0}
                    font_size: Window.width/20
                    on_release:
                        root.manager.transition.direction='left'
                        root.manager.current = 'Scores'


